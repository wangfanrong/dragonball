    <!-- 更新记录 -->
    <update id="update" parameterType="com.dragonball.model.user.entity.UserEO">
    update t_user
    <set>
        <if test="num != null">`num` = #{num}, </if>
        <if test="userName != null">`user_name` = #{userName} </if>
    </set>
    where id = #{id}
    </update>

    <!-- 更新记录 -->
    <update id="batchUpdate" parameterType="com.dragonball.model.user.entity.UserEO">
        <foreach collection="list" item="item" index="index"
                 separator=";">
            update t_user
            <set>
                <if test="item.num != null">
                    num = #{item.num},
                </if>
                <if test="item.userName != null and item.userName != ''">
                    user_name = #{item.userName}
                </if>
            </set>
            where id = #{item.id}
        </foreach>
    </update>

    <!-- 通过主键删除记录 -->
    <delete id="delete">
        delete from t_user where id = #{id}
    </delete>

    <!-- 通过主键批量删除记录 -->
    <delete id="batchDeleteByIds" parameterType="list">
        DELETE FROM t_user WHERE id IN
        <foreach collection="list" item="item" open="(" separator=","
                 close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 统计符合条件的实体对象个数 -->
    <select id="countByMap" parameterType="map" resultType="int">
        SELECT COUNT(1) FROM t_user
        <include refid="selectSql" />
    </select>

    <!-- 查询符合条件的实体对象 -->
    <select id="selectByMap" parameterType="map" resultMap="BaseResultMap"
            resultType="com.dragonball.model.user.entity.UserEO">
        SELECT * FROM t_user
        <include refid="selectSql" />
        <if test="ORDERBY != null and ORDERBY != ''">
            ORDER BY ${ORDERBY}
        </if>
        <if test="ORDER != null and ORDER != ''">
            ${ORDER}
        </if>
        <if test="limit != null">
            LIMIT #{limit}
        </if>
        <if test="start != null">
            OFFSET #{start}
        </if>
    </select>

